<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewItemGameRoundStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_view_margin"
            android:fontFamily="@font/bungee_regular"
            card_view:cardCornerRadius="@dimen/card_view_radius">

            <LinearLayout
                android:background="@color/seeThroughPurple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/roundTimeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_L"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/roundTime45"
                        android:background="@drawable/r_btn_round_time_left"
                        android:button="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingVertical="@dimen/padding_S"
                        android:fontFamily="@font/bungee_regular"
                        android:text="@string/time45s"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/roundTime60"
                        android:background="@drawable/r_btn_round_time_middle"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingVertical="@dimen/padding_S"
                        android:fontFamily="@font/bungee_regular"
                        android:text="@string/time60s"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/roundTime90"
                        android:background="@drawable/r_btn_round_time_right"
                        android:button="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingVertical="@dimen/padding_S"
                        android:fontFamily="@font/bungee_regular"
                        android:text="@string/time90s"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </RadioGroup>

                <Button
                    android:id="@+id/buttonNextGameRoundStart"
                    android:background="@drawable/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="@dimen/padding_L"
                    android:paddingVertical="@dimen/padding_S"
                    android:layout_margin="@dimen/margin_L"
                    android:fontFamily="@font/bungee_regular"
                    android:text="@string/start"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
