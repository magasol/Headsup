<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/radio_button_radius"
                android:topLeftRadius="@dimen/radio_button_radius" />
            <stroke android:width="@dimen/radio_button_stroke_width" android:color="@color/colorAccent" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/radio_button_radius"
                android:topLeftRadius="@dimen/radio_button_radius" />
            <stroke android:width="@dimen/radio_button_stroke_width" android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>
